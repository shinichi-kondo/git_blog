<div class="container">
  <div class="row">
      <% @articles.each do |article| %>
        <%= link_to article do %> 
          <div class="col-md-3 margin-top-5per article-box">
              <% if article.image_id.present? %>
                 <%= image_tag attachment_url(article, :image), class: 'img-responsive  padding-top-15 article-list-image' %>
              <% else %>
                 <%= image_tag 'Shinkansen.jpg', class: 'img-responsive  padding-top-15 article-list-image' %>
              <% end %>
              <div class="padding-bottom-15">
                  <p class="title"><%= article.title %></p>
                  <span><%= article.created_at.strftime("%Y年%m月%d日")  %></span>
              </div>
          </div>
        <% end %>  
      <% end %>    
  </div>
  <div class="row padding-bottom-15">
      <%= link_to '新規作成', new_article_path, class: 'margin-top-5per btn btn-primary' %>
  </div>
</div>
